{
  "manifest_version": 2,
  "name": "Instasave",
  "version": "1.0.0.0",
  "description": "Instantly save Instagram photos",
  "permissions": [
    "downloads",
    "background",
    "tabs",
    "https://instagram.com/*"
  ],

  "background": {
    "page": "background.html"
  },

  "homepage_url": "http://www.example.com",

  "content_security_policy": "script-src 'self' blob: filesystem: chrome-extension-resource: unsafe_inline"
}
