{
  "manifest_version": 2,
  "name": "Instasave",
  "version": "1.0.0.0",
  "description": "Instantly save Instagram photos",
  "permissions": [
    "downloads",
    "background",
    "tabs",
    "https://instagram.com/*"
  ],

  "background": {
    "page": "background.html"
  },

  "page_action": {
    "default_title": "Instasave this image",
    "default_icon": "icon-19.png"
  },


  "homepage_url": "http://www.example.com"
}
